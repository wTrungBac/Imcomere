@inject Cart cart
@code{
    private int cartCounter { get; set; }

    public void setCartCounter(int cartCounter)
    {
        this.cartCounter = cartCounter;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        var cartItems = await cart.getCartItems();
        setCartCounter(cartItems.Sum(s=>s.quantity));
    }

}
